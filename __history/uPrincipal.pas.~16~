unit uPrincipal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, uFrmBasePadrao, Vcl.ComCtrls,
  Vcl.ToolWin, Vcl.StdCtrls, Vcl.Buttons, Vcl.ExtCtrls, uFrameBotao;

type
  TfrmPrincipal = class(TfrmBasePadrao)
    SpeedButton1: TSpeedButton;
    btnPedido: TPanel;
    procedure btnPedidoMouseEnter(Sender: TObject);
    procedure btnPedidoMouseLeave(Sender: TObject);
    procedure btnPedidoMouseDown(Sender: TObject; Button: TMouseButton;
      Shift: TShiftState; X, Y: Integer);
    procedure btnPedidoMouseUp(Sender: TObject; Button: TMouseButton;
      Shift: TShiftState; X, Y: Integer);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmPrincipal: TfrmPrincipal;

implementation

{$R *.dfm}

procedure TfrmPrincipal.btnPedidoMouseDown(Sender: TObject;
  Button: TMouseButton; Shift: TShiftState; X, Y: Integer);
begin
  inherited;
  btnPedido.Color := clBtnShadow;
end;

procedure TfrmPrincipal.btnPedidoMouseEnter(Sender: TObject);
begin
  inherited;
  btnPedido.Color := clBtnFace;
end;

procedure TfrmPrincipal.btnPedidoMouseLeave(Sender: TObject);
begin
  inherited;
  btnPedido.Color := clWhite;
end;

procedure TfrmPrincipal.btnPedidoMouseUp(Sender: TObject; Button: TMouseButton;
  Shift: TShiftState; X, Y: Integer);
begin
  inherited;
  btnPedido.Color := clBtnFace;
end;

end.
